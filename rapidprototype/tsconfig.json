{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022" ],
    "types": ["node"],
    "noEmitOnError": false,
    "noErrorTruncation": true
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}